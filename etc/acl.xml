<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Cytracon_Core::extensions" title="Cytracon">
                    <resource id="Cytracon_PageBuilder::pagebuilder" title="Page Builder" sortOrder="10">
                        <resource id="Cytracon_PageBuilder::template" title="Template" translate="title" sortOrder="10">
                            <resource id="Cytracon_PageBuilder::template_save" title="Save Template" sortOrder="10" />
                            <resource id="Cytracon_PageBuilder::template_delete" title="Delete Template" sortOrder="20" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Cytracon_PageBuilder::settings" title="Cytracon Page Builder" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>